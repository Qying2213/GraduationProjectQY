# 简历评估系统环境变量配置示例
# 复制此文件为 .env 并填写实际值

# 服务器配置
RESUME_SERVER_HOST=
RESUME_SERVER_PORT=8080

# 数据库配置
RESUME_DB_DRIVER=sqlite
RESUME_DB_DSN=file:data/app.db?cache=shared&mode=rwc

# AI 配置
RESUME_AI_PROVIDER=
RESUME_AI_API_KEY=
RESUME_AI_MODEL=deepseek-v3-2-251201

# Coze 配置
RESUME_COZE_BASE_URL=https://api.coze.cn
RESUME_COZE_TOKEN=your_coze_token_here
RESUME_COZE_WORKFLOW_ID=your_workflow_id_here

# 凭据加密密钥（用于加密存储用户密码）
RESUME_CREDENTIALS_ENC_KEY=your_32_char_encryption_key_here

# 批量处理配置
RESUME_BATCH_CONCURRENCY=5
RESUME_BATCH_MAX_UPLOAD_MB=50

# Python 配置（留空则自动检测 venv/bin/python3 或系统 python3）
RESUME_PYTHON_PATH=

# 毕业设计后台配置（用于从毕业设计项目获取简历）
RESUME_GRADUATE_API_URL=http://localhost:8084
